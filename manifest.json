{
    "name": "Markdown for Google Keep",
    "description": "Write and view Google Keep notes in Markdown.",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "assets/markdown-on-16.png",
            "32": "assets/markdown-on-32.png",
            "48": "assets/markdown-on-48.png",
            "128": "assets/markdown-on-128.png"
        }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "css": [
                "markdown.css"
            ],
            "js": [
                "marked.min.js",
                "content.js"
            ],
            "matches": [
                "*://keep.google.com/*"
            ]
        }
    ],
    "host_permissions": [
        "*://keep.google.com/*"
    ],
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "storage"
    ]
}